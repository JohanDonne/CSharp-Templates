  "sources": [
    {
      "include": [ "Template.sln" ],
      "modifiers": [
        {
          "condition": "(Architecture == 'Class Libraries')",
          "include": [
            "Domain/**",
            "DataAccessLayer/**",
            "LogicLayer/**",
            "PresentationLayer/**",
            "AppRoot/**"
          ]
        },
        {
          "condition": "(Architecture == 'Project Folders')",
          "include": [
            "WinformsApp/**"
          ]
        }
      ]
    }
