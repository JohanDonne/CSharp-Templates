    "Architecture":{
      "type":"parameter",
      "datatype": "choice",
      "defaultValue":"Class Libraries",
      "choices": [
        {
          "choice": "Class Libraries",
          "description": "WinForms app using Class Libraries"
        },        
        {
          "choice":"Project Folders",
          "description":"WinForms app using Solution Folders"
