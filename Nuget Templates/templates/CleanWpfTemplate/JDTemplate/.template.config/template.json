{
  "$schema": "http://json.schemastore.org/template",
  "author": "Johan Donne",
  "classifications": [ "Clean Architecture", "WPF", "JD" ],
  "name": "WPF Clean Architecture JD",
  "identity": "JohanDonne.WpfClean",
  "description": "Solution Template for a WPF App using 3 layer architecture",
  "shortName": "WPFClean-JD", 
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "sourceName": "JDTemplate", 
  "preferNameDirectory": true,
  "symbols":{
    "Architecture":{
      "type":"parameter",
      "datatype": "choice",
      "defaultValue":"Class Libraries",
      "choices": [
        {
          "choice": "Class Libraries",
          "description": "WPF app using Class Libraries"
        },        
        {
          "choice":"Project Folders",
          "description":"WPF app using Solution Folders"
        },
        {
          "choice":"MVVM DI",
          "displayname":"Class Libraries using MVVM & DI",
          "description":"WPF app using MVVM & DI"          
        }
      ]
    },
    "CreationTimeStamp":{
       "type": "generated",
       "generator": "now",
       "parameters": {
          "format": "g"
       },
       "replaces":"01/01/1901"
    }
  },
  "sources": [
    {
      "include": [ "JDTemplate.sln" ],
      "modifiers": [
        {
          "condition": "(Architecture == 'Class Libraries')",
          "include": [
            "Domain/**",
            "DataAccessLayer/**",
            "LogicLayer/**",
            "PresentationLayer/**",
            "AppRoot/**"
          ]
        },
        {
          "condition": "(Architecture == 'Project Folders')",
          "include": [
            "WpfApp/**"
          ]
        },
        {
          "condition": "(Architecture == 'MVVM DI')",
          "include": [
            "Domain2/**",
            "DataAccessLayer2/**",
            "LogicLayer2/**",
            "PresentationLayer2/**",
            "AppRoot2/**"
          ]
        }
      ]
    }
  ],
