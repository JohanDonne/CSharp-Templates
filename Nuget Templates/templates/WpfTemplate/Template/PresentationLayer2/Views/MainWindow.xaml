<Window x:Class="Template.PresentationLayer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Template.PresentationLayer.Views"
        xmlns:viewmodels="clr-namespace:Template.PresentationLayer.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        mc:Ignorable="d"
        Title="{Binding Title}" d:Title="Designtime Title "
        Height="450" Width="800"
>
    <DockPanel>
        <TextBlock DockPanel.Dock="Top"
                   Text="{Binding InfoText}" d:Text="Designtime Info"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="10"  Padding="30,10"  Background="Silver" FontSize="14" />
        <TextBlock DockPanel.Dock="Top" 
                   Text="{Binding Time}" d:Text="00:00:00" 
                   TextAlignment="Center" Background="CadetBlue" Foreground="White"
                   FontSize="24" Margin="50" Width="300" Padding="10" />
        <Button DockPanel.Dock="Top"
                Content="Update Time"
                Command="{Binding UpdateCommand}"
                Width="100" Height="40" />
    </DockPanel>
</Window>
