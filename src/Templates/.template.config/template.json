{
  "$schema": "http://json.schemastore.org/template",
  "author": "Johan Donne",
  "classifications": [ "3Layer" ],
  "name": "3LayerSolution",
  "identity": "3LayerSolutionId",
  "description": "Solution Template for a solution using the 3layer architecture",
  "shortName": "3Layers", 
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "sourceName": "Templates", 
  "preferNameDirectory": "true",
  "symbols":{
    "author": {
      "type": "parameter",
      "defaultValue": "Author",
      "replaces":"SolutionAuthor"
    },
    "SolutionType":{
      "type":"parameter",
      "datatype": "choice",
      "defaultValue":"wpflibraries",
      "choices": [
        {
          "choice": "consolelibraries",
          "description": "Console app using Class Libraries"
        },
        {
          "choice": "wpflibraries",
          "description":"WPF App using Class Libraries"
        },
        {
          "choice":"winformslibraries",
          "description":"WinForms App using Class Libraries"
        }
      ]
    }
  },
  "sources": [
    {
      "include": [
         "Templates.sln",
         "Domain/**",
         "DataAccessLayer/**"
      ],
      "modifiers": [
        {
          "condition": "(SolutionType == wpflibraries)",
          "include": [
            "WpfLogicLayer/**",
            "WpfPresentationLayer/**",
            "WpfAppRoot/**"
          ]
        },
        {
          "condition": "(SolutionType == consolelibraries)",
          "include": [
            "ConsoleLogicLayer/**",
            "ConsolePresentationLayer/**",
            "ConsoleAppRoot/**"
          ]
        },
        {
          "condition": "(SolutionType == winformslibraries)",
          "include": [
            "WinFormsLogicLayer/**",
            "WinFormsPresentationLayer/**",
            "WinFormsAppRoot/**"
          ]
        }
      ]
    }
  ]
}